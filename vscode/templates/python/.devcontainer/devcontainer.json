// For format details, see https://aka.ms/vscode-remote/devcontainer.json or the definition README at
// https://github.com/microsoft/vscode-dev-containers/tree/master/containers/alpine-3.10-git
{
	"name": "Common Development Environment Template",

	// Use bash as the shell
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},

	// Load the docker-compose file to bring the services up
	"dockerComposeFile": [
		// Main compose file
		"docker-compose.yaml"
		// Additional compose files may be added here (eg. if setting local variables)
	],

	// Connect to the VS Code container for development
	"service": "vscode-python",

	// If multiple containers are defined in docker-compose.yaml you may define the list of services to run here
	"runServices": [
		"vscode-python"
	],

	// The workspace files are mounted to /vscode
	"workspaceFolder": "/vscode",

	// If you need to overwrite $PATH you may set it here
	// "remoteEnv": {
	//   "PATH": "${containerEnv:PATH}:/vscode/bin"
	// },

	// Install the below vscode extensions into the development container
	"extensions": [
		// Better Comments
		"aaron-bond.better-comments",
		// Bookmarks
		"alefragnani.bookmarks",
		// Bracket Pair Colorizer 2
		"coenraads.bracket-pair-colorizer-2",
		// GitLens
		"eamodio.gitlens",
		// GitLab Workflow
		"fatihacet.gitlab-workflow",
		// HTML Preview
		"tht13.html-preview-vscode",
		// Markdown All in One
		"yzhang.markdown-all-in-one",
		// Markdown Preview Enhanced
		"shd101wyy.markdown-preview-enhanced",
		// Markdown TOC
		"alanwalk.markdown-toc",
		// markdownlint
		"davidanson.vscode-markdownlint",
		// Microsoft Intellicode
		"visualstudioexptteam.vscodeintellicode",
		// Magic Python
		"magicstack.magicpython",
		// Python
		"ms-python.python",
		// Shellcheck
		"timonwong.shellcheck",
		// Sonarlint
		"sonarsource.sonarlint-vscode",
		// Table Formatter
		"shuworks.vscode-table-formatter",
		// Todo Tree
		"gruntfuggly.todo-tree",
		// YAML
		"redhat.vscode-yaml"
	]

}
